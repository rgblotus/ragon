# Olivia Backend Configuration
# Copy this file to .env and modify values

# Environment
ENVIRONMENT=development

# Database Configuration (PostgreSQL + asyncpg)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/oliviadb
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis Cache (optional - for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Milvus Vector Database
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=olivia_vectors

# LLM Configuration (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=phi3.5:latest
OLLAMA_EMBED_MODEL=nomic-embed-text

# Application Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB

# Collections Directory
COLLECTIONS_DIR=./collections

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
